# .screenrc

# Go to home dir
chdir

# Automatically detach on hangup.
autodetach on

# Enable buttom status bar
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= Bd}%{k}  %S  %{= k.}%{w}  %?%-w%?%{+b }%{G}%n%f%t%{-b }%{w}%?%+w%?%= %{= B.}%{k}  %H  %{= dd}'

# Disable visaul bell
vbell off

# Enable 256 color
term "screen-256color"

# Let window count starting with 1
bind "c" screen 1
bind "^c" screen 1
bind "0" select 10
screen 1
